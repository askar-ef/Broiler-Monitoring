<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="#DEF8EF">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="320dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/setting" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/underline1"/>
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/logo_tanpa_nama"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="310dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="350dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/akun" />
            <TextView
                android:id="@+id/akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:paddingLeft="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/underline1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="350dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/password" />
            <TextView
                android:id="@+id/password0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:paddingLeft="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/underline1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="350dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/panduan" />
            <TextView
                android:id="@+id/panduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panduan"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:paddingLeft="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/underline1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="350dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/logout" />
            <TextView
                android:id="@+id/keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:paddingLeft="60dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/underline1"/>
        </RelativeLayout>
    </LinearLayout>
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        app:iconTint="@color/black"
        app:backgroundColor="@color/navigation"
        app:indicatorColor="@color/background"
        app:iconTintActive="@color/black"
        app:textColor="@color/black"
        app:iconSize="22dp"
        android:padding="10dp"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>