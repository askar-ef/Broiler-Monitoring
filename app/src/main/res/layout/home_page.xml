<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomePageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/background"/>
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_y="-100dp"
                android:layout_x="270dp"
                android:background="@drawable/ellipse_26"
                />
        </AbsoluteLayout>
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_y="140dp"
                android:layout_x="-60dp"
                android:background="@drawable/ellipse_24"
                />
        </AbsoluteLayout>
        <View
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/logo_tanpa_nama"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Selamat Datang,"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:text="Username"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="38dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Status"
                    android:textSize="24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Aman"
                    android:textStyle="bold"
                    android:textColor="@color/title_green"
                    android:textSize="40dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="119dp"
                    android:background="@drawable/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="130dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginRight="235dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Suhu"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"/>
                        <View
                            android:layout_width="37.5dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_suhu"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="02%"
                            android:textStyle="bold"
                            android:textColor="@color/aman"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="-235dp"
                        android:layout_marginRight="120dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Amoniak"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"/>
                        <View
                            android:layout_width="26.7dp"
                            android:layout_height="37.5dp"
                            android:layout_marginTop="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_amonia"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15%"
                            android:textStyle="bold"
                            android:textColor="@color/waspada"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="-120dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kelembapan"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"/>
                        <View
                            android:layout_width="29dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/icon_kelembaban"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textStyle="bold"
                            android:textColor="@color/bahaya"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginLeft="270dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/frame" />
            <Spinner
                android:id="@+id/kandang"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:entries="@array/kandang"
                android:layout_marginLeft="-140dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="20dp">
            </Spinner>
            <View
                android:layout_width="1dp"
                android:layout_height="17dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-70dp"
                android:layout_marginRight="60dp" />
            <View
                android:background="@drawable/arrow_dropdown"
                android:layout_width="13dp"
                android:layout_height="8dp"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="430dp"
            android:layout_marginBottom="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitur Tambahan"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:textSize="22dp"/>
            <View
                android:background="@drawable/underline"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp">
                    <View
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/background_icon"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/daftar_peternak"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp">
                    <View
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/background_icon"/>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/klasifikasi" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp">
                    <View
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/background_icon"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/forcasting"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp">
                    <View
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/background_icon"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/history"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp">
                    <View
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/background_icon"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/history"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="-70dp"
        android:background="@drawable/bottom_dashboard">
    </LinearLayout>
</LinearLayout>