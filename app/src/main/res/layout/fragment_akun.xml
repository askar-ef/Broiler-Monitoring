<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Akun">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/background"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/panen_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/inputpanen_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Akun"
                    android:layout_toRightOf="@id/panen_icon"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/line3"/>

        </LinearLayout>

        <ImageView
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:src="@drawable/logo_without_text"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/akun_profilepicSection"
        android:layout_width="178dp"
        android:layout_height="178dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:layout_marginRight="9dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/akun_changeprofilepic"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:elevation="1dp"
            android:src="@drawable/profile_pic"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingHorizontal="55dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/akun_profilepicSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rifa Indra Setiawan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semi_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rifa"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="52dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/akun_emailicon"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="rifaindrasetiawan@mail.ugm.ac.id"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semi_bold"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/akun_teleponicon"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0877 5231 9234"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semi_bold"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/akun_roleicon"/>

            <TextView
                android:layout_marginLeft="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anak Kandang / Peternak"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semi_bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>