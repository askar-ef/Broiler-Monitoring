<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nama_apk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broiler Monitoring"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/title_green"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang !"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>

    <View
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/logo_bromo"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>

    <View
        android:id="@+id/icon_username"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/user"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="55dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="20dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="45dp"/>

    <View
        android:id="@+id/icon_password"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/unlock"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="55dp"/>

    <View
        android:id="@+id/icon2_password"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="320dp"
        android:background="@drawable/hide"/>

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="45dp"/>

    <CheckBox
        android:id="@+id/remember_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="50dp"
        android:text="Remember me"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot ?"
        android:textSize="15dp"
        android:layout_marginTop="504dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="right"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/login_name"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:text="Don't have an account ?"
        android:textSize="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:paddingLeft="45dp"/>

    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="659dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:paddingRight="45dp"
        android:gravity="right"/>

</RelativeLayout>