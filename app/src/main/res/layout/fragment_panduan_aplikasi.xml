<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PanduanAplikasi">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layout_panduan_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/newspaper_icon"/>

                <TextView
                    android:id="@+id/txt_panduan_aplikasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Panduan Aplikasi"
                    android:layout_toRightOf="@id/settings_icon"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line3"/>

        </LinearLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="46dp"
            android:src="@drawable/logo_without_text"/>

    </LinearLayout>

    <TextView
        android:id="@+id/title_panduan_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="90dp"
        android:layout_marginTop="26dp"
        android:text="Berikut adalah keterangan singkat tentang aplikasi BroMo"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/main_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tentang_bromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tentang Bromo"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/tentangBromo"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tim Pengembang"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/timPengembang"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stakeholder"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Imam Fahrurrozi, S.T., M.Cs."
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI UX Team"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Rifa Indra Setiawan \nAnisah Salma Rafida"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frontend Team"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Muhammad Harits Detya Irawan \nIlham Rafi Mahameru"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>