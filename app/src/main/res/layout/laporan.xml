<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarPeternakActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="#DEF8EF">
            <View
                android:layout_width="22dp"
                android:layout_height="28dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="320dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/laporan" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Peternak"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/underline1"/>
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/logo_tanpa_nama"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="310dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="40dp"
            android:text="@string/laporan"/>
        <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="50dp"
            app:cardBackgroundColor="@color/background">
            <ImageView
                android:id="@+id/pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/pdf"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/background">
            <ImageView
                android:id="@+id/csv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/csv"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        app:iconTint="@color/black"
        app:backgroundColor="@color/navigation"
        app:indicatorColor="@color/background"
        app:iconTintActive="@color/black"
        app:textColor="@color/black"
        app:iconSize="22dp"
        android:padding="10dp"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>