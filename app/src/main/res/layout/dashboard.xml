<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DashboardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="#DEF8EF">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="320dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/dashboard" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="23dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/underline1"/>
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/logo_tanpa_nama"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="310dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progress_suhu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="50"/>
        <TextView
            android:id="@+id/suhu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="55dp"
            android:text="0%"
            android:textSize="20dp"
            android:gravity="center"/>
        <ProgressBar
            android:id="@+id/progress_kelembapan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="180dp"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="50"/>
        <TextView
            android:id="@+id/kelembapan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="210dp"
            android:text="0%"
            android:textSize="20dp"
            android:gravity="center"/>
    </RelativeLayout>
    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="15dp"
        app:iconTint="@color/black"
        app:backgroundColor="@color/navigation"
        app:indicatorColor="@color/background"
        app:iconTintActive="@color/black"
        app:textColor="@color/black"
        app:iconSize="22dp"
        android:padding="10dp"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>