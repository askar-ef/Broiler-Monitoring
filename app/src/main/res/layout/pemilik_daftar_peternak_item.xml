<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/background1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_peternak"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/foto_peternak"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_deskripsi_peternak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/layout_nama_peternak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_nama_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama : "
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/nama_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valentino"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_no_hp_peternak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_no_hp_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. hp : "
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/no_hp_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000-000-000"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_email_peternak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_email_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email : "
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/email_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="valentino123@gmail.com"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_penempatan_peternak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_penempatan_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penempatan : "
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/penempatan_peternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kandang 1"
                            android:textSize="13dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>