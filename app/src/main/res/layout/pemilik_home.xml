<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pemilik.HomePemilik">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/background"/>
            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/ellipse_26"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-104dp"
                android:layout_marginRight="-144dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_24"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="-60dp"
                />
            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/logo_tanpa_nama"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Selamat Datang,"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/username_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="30dp"
                android:text="Username"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="38dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/tambah_kandang"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="30dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="#CAFFF9">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="25dp"
                                android:text="Tambah"
                                android:textColor="@color/black"
                                android:drawableEnd="@drawable/tambah_kandang"
                                android:drawablePadding="8dp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="9dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="129dp"
                                android:paddingHorizontal="6dp"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/txt_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Status"
                                    android:textSize="24sp"
                                    android:layout_marginTop="20dp"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:id="@+id/txt_statusCondition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_status"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Aman"
                                    android:textStyle="bold"
                                    android:textColor="@color/title_green"
                                    android:textSize="40sp" />
                                <TextView
                                    android:id="@+id/txt_updateStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="79dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/black"
                                    android:text="terbaru"
                                    android:textSize="12sp" />
                                <Spinner
                                    android:id="@+id/kandang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/dropdown_kandang"
                                    android:layout_alignParentRight="true"
                                    android:paddingHorizontal="5dp"
                                    android:entries="@array/kandang"/>
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@drawable/line" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Suhu"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/montserrat"/>
                                    <View
                                        android:layout_width="37.5dp"
                                        android:layout_height="35dp"
                                        android:layout_marginVertical="10dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_suhu"/>
                                    <TextView
                                        android:id="@+id/suhu"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="02%"
                                        android:textStyle="bold"
                                        android:textColor="@color/aman"
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:layout_alignParentBottom="true"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Amoniak"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/montserrat"/>
                                    <View
                                        android:layout_width="26.7dp"
                                        android:layout_height="37.5dp"
                                        android:layout_marginVertical="10dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/icon_amonia"/>
                                    <TextView
                                        android:id="@+id/amoniak"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="15%"
                                        android:textStyle="bold"
                                        android:textColor="@color/waspada"
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:layout_alignParentBottom="true"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Kelembapan"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/montserrat"/>
                                    <View
                                        android:layout_width="29dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:layout_marginVertical="10dp"
                                        android:background="@drawable/icon_kelembaban"/>
                                    <TextView
                                        android:id="@+id/kelembapan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="30%"
                                        android:textStyle="bold"
                                        android:textColor="@color/bahaya"
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:layout_alignParentBottom="true"/>
                                </LinearLayout>
                            </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fitur Tambahan"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:textSize="22dp"/>
                        <View
                            android:background="@drawable/underline"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <View
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/background_icon"/>

                                <ImageButton
                                    android:id="@+id/daftar_peternak"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/daftar_peternak" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp">
                                <View
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/background_icon"/>

                                <ImageButton
                                    android:id="@+id/klasifikasi"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/klasifikasi"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp">
                                <View
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/background_icon"/>
                                <ImageButton
                                    android:id="@+id/forcasting"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/forcasting"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp">
                                <View
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/background_icon"/>
                                <ImageButton
                                    android:id="@+id/history"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/history"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="19dp">
                                <View
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/background_icon"/>
                                <ImageButton
                                    android:id="@+id/notifikasi"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/notifikasi"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_icon"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>